<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dialog_bg"
                android:background="#88000000"
                android:onClick="parentSpaceClick">


    <LinearLayout
            android:id="@+id/ll_popup_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="76dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#fff"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:background="#4f4f4f"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/title_wos_select"
                    android:textColor="#fff"
                    android:textSize="28dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:gravity="center_vertical"
                    android:background="#3f3f3f">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/common_btn_close" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="16dp"
                android:gravity="right"
                android:orientation="horizontal">


            <EditText
                    android:id="@+id/et_search"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:minWidth="250dp"
                    android:paddingHorizontal="16dp"
                    android:textSize="22sp"
                    android:textColor="@color/colorWhite2"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:text=""
                    android:background="@color/colorGray"/>
            <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="54dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="1dp"
                    android:src="@drawable/ic_search_white_24dp"
                    android:background="@color/colorEditor1Readonly"/>

<!--            <Button-->
<!--                    android:id="@+id/btn_confirm"-->
<!--                    style="@style/btn_orange"-->
